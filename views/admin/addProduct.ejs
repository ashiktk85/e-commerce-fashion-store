    <script>
        // alert("hell")

        function nameFun() {
            const name = document.getElementById("product_name").value.trim();
            const nameRegex = /^[A-Za-z]+(?:\s[A-Za-z]+)*$/;
            const nameError = document.getElementById("nameErr");
    
            if (name === '') {
                nameError.innerHTML = "Product name is required";
            } else if (!nameRegex.test(name)) {
                nameError.innerHTML = "Invalid Name, no spaces at the beginning of the name";
            } else {
                nameError.innerHTML = "";
            }
        }
    
        function disFun() {
            const dis = document.getElementById("product_dis").value.trim();
            const disError = document.getElementById("disErr");
    
            if (dis === '') {
                disError.innerHTML = "Product description is required";
            } else {
                disError.innerHTML = "";
            }
        }
    
        function rpFun() {
            const rp = document.getElementById("regprice").value.trim();
            const regex = /^[0-9]+$/;
            const rpError = document.getElementById("rpErr");
    
            if (rp === '') {
                rpError.innerHTML = "Regular price is required";
            } else if (!regex.test(rp)) {
                rpError.innerHTML = "Invalid price";
            } else {
                rpError.innerHTML = "";
            }
        }
    
        function opFun() {
            const op = document.getElementById("offprice").value.trim();
            const rp = document.getElementById("regprice").value.trim();
            const regex = /^[0-9]+$/;
            const opError = document.getElementById("opErr");
    
            if (op !== '' && !regex.test(op)) {
                opError.innerHTML = "Invalid price";
            } else if (op !== '' && parseFloat(op) > parseFloat(rp)) {
                opError.innerHTML = "Offer price cannot exceed regular price";
            } else {
                opError.innerHTML = "";
            }
        }
    
        function coFun() {
            validateQuantity("small", "quantitySmall", "sizeSmallErr");
            validateQuantity("medium", "quantityMedium", "sizeMediumErr");
            validateQuantity("large", "quantityLarge", "sizeLargeErr");
        }
    
        function validateQuantity(sizeLabel, quantityId, errorId) {
            const quantity = document.getElementById(quantityId).value.trim();
            const errorElement = document.getElementById(errorId);
    
            if (quantity === '') {
                errorElement.innerHTML = `${sizeLabel} Size Quantity is required`;
            } else if (!/^[0-9]+$/.test(quantity)) {
                errorElement.innerHTML = `Invalid quantity for ${sizeLabel} Size`;
            } else {
                errorElement.innerHTML = "";
            }
        }
    
        function previewImages() {
            const input = document.getElementById('Pro_img');
            const previewContainer = document.getElementById('imagePreviewContainer');
            const files = input.files;
    
            // Clear previous previews
            previewContainer.innerHTML = '';
    
            for (const file of files) {
                const reader = new FileReader();
    
                reader.onload = function (e) {
                    const preview = document.createElement('img');
                    preview.src = e.target.result;
                    preview.classList.add('image-preview');
                    previewContainer.appendChild(preview);
                };
    
                reader.readAsDataURL(file);
            }
        }
    
        function validateImages() {
            const fileInput = document.getElementById('Pro_img');
            const imageError = document.getElementById('imageError');
            const allowedExtensions = ['jpg', 'jpeg', 'png'];

            for (const file of fileInput.files) {
    const fileExtension = file.name.split('.').pop().toLowerCase();
    if (!allowedExtensions.includes(fileExtension)) {
        imageError.textContent = 'Invalid file format. Please upload JPEG or PNG files.';
        return false;
    }
}
    
            if (fileInput.files.length < 3) {
                imageError.textContent = 'Please select at least 3 images';
                return false;
            }
    
          imageError.textContent = '';



return true;
}

function validateForm() {
const validationFunctions = [nameFun(), disFun(), rpFun(), coFun(), validateImages()];
let isValid = true;

for (const validationFunction of validationFunctions) {
    validationFunction();
}

const errorElements = document.querySelectorAll('.text-danger');
for (const element of errorElements) {
    if (element.innerHTML.trim() !== '') {
        isValid = false;
        break;
    }
}

return isValid;
}

document.getElementById("submitId").addEventListener("submit", (e) => {
if (!validateForm()) {
    e.preventDefault();
}
});

