    <script>
        function list(id){
            
             const catId=id
        
            $.ajax({
                url:"/admin/cat-list",
                method:"post",
                data:{
                    catId
                },
               success:(response)=>{
                if(response.status===true){
                    window.location.href="http://localhost:7777/admin/category"
                }
               }
            })
            
   
        }

        function nameFun() {
             const name = document.getElementById("product_name").value.trim();
             const nameErr = document.getElementById("nameErr")
             const nameRegex =/^[A-Za-z]+(?:\s[A-Za-z]+)*\s*$/

             if (name.trim() === '') {
                document.getElementById("nameErr").innerHTML = "Name is Require"

            } else {
                document.getElementById("nameErr").innerHTML = ""
            }

            if (!nameRegex.test(name)) {
                document.getElementById("nameErr").innerHTML = "Name is Invalid"
            } else {
                document.getElementById("nameErr").innerHTML = ""
            }
        }

        function funDis() {
            const dis = document.getElementById("dis").value.trim()
            const disErr = document.getElementById("nameErr")

            if(dis.trim() == '') {
                document.getElementById("disErr").innerHTML = "Discription Required."
            } else {
                document.getElementById("disErr").innerHTML = ""
            }

            if(dis.length < 10) {
                document.getElementById("disErr").innerHTML = "Minimum 10 charachters required."
            } else {
                document.getElementById("disErr").innerHTML = ""
            }

        }

        function add() {
   

    const name = document.getElementById("product_name").value.trim();
    const dis = document.getElementById("dis").value.trim();
    const nameErr = document.getElementById("nameErr");
    const disErr = document.getElementById("disErr");

    nameFun();
    funDis();

    if (name === "" || dis === "") {
        alert("Name and description are required.");
        return; 
    }

    $.ajax({
        url: "/admin/category",
        method: "post",
        data: {
            name,
            dis
        },
        success: (response) => {
            if (response.status == true) {
                const Toast = Swal.mixin({
                    toast: true,
                    position: "center",
                    showConfirmButton: false,
                    timer: 1500,
                  
                    didOpen: (toast) => {
                        toast.onmouseenter = Swal.stopTimer;
                        toast.onmouseleave = Swal.resumeTimer;
                    }
                });
                Toast.fire({
                    icon: "success",
                    title: "Category added."
                }).then((result) => {
                    window.location.reload();
                });
            } else if (response.status == "exists") {
                alert("This category name already exists.");
            }
        }
    });
}




       
