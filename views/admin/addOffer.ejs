<script>

function startDate() {
       
    const selectedDate = new Date(document.getElementById('startDate').value);
 
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    
    
    if (selectedDate < today) {
      
        document.getElementById('startDateError').innerText = 'Selected date cannot be in the past.';
    } else {
        
        document.getElementById('startDateError').innerText = '';
    }
}



function endDate() {
    // Get the selected end date
    const endDate = new Date(document.getElementById('endDate').value);
    // Get the selected start date
    const startDate = new Date(document.getElementById('startDate').value);
    // Get today's date at midnight
    const today = new Date();
    today.setHours(0, 0, 0, 0);

    // Compare the selected end date with today's date
    if (endDate < today) {
        // If selected end date is before today, show an error message
        document.getElementById('endDateError').innerText = 'End date cannot be in the past.';
        return; // Exit the function early if there's an error
    }

    // Compare the selected end date with the selected start date
    if (endDate < startDate) {
        // If selected end date is before selected start date, show an error message
        document.getElementById('endDateError').innerText = 'End date cannot be before start date.';
        return; // Exit the function early if there's an error
    }

    // Compare the selected end date with the selected start date
    if (endDate.getTime() === startDate.getTime()) {
        // If selected end date is the same as selected start date, show an error message
        document.getElementById('endDateError').innerText = 'End date cannot be the same as start date.';
        return; // Exit the function early if there's an error
    }

    // Clear any previous error messages
    document.getElementById('endDateError').innerText = '';
}

function catDis(){
    const discount=document.getElementById("discount").value

    if(discount>=99&&discount<=1){
        document.getElementById("discountErr").innerHTML="dicount must be 99 or 1 %"
        
    }else if(discount=="") {
        document.getElementById("discountErr").innerHTML="discount is require"
    }else{
        document.getElementById("discountErr").innerHTML=""
    }
}


function add(){
    // alert("submit")
    startDate()
    endDate()
    catDis()

    const startErr=document.getElementById('startDateError').innerText
    const endErr= document.getElementById('endDateError').innerText
    const disErr=document.getElementById("discountErr").innerHTML

    if(startErr||endErr||disErr){
        document.getElementById("common").innerHTML="Enter valid offer"
    }else{
        document.getElementById("common").innerHTML=""

        const discount=document.getElementById("discount").value
        const startDate=document.getElementById('startDate').value
        const endDate=document.getElementById('endDate').value
        const catname=document.getElementById('catNameSelect').value
        alert(catname)
        // alert(typeof(catname))


        $.ajax({
            url:"/admin/addOfferPost",
            method:"post",
            data:{
                discount,
                startDate,
                endDate,
                catname
            },
            success:(response)=>{
                if(response.status==true){
                    window.location.href="/admin/categoryOffer"
                }
            }
        })
    }
}


</script>




